@model IEnumerable<INTELISIS.APPCORE.EL.HistorialReparaciones>

@{
    ViewData["Title"] = "Historial de reparaciones";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4"><i class="fas fa-users me-2"></i>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Agregar registro
        </a>
    </div>



    <div class="card mb-4">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-table me-2"></i>Historial de reparaciones</h5>
                <div>
                    <div class="input-group">

                        <span class="input-group-text bg-transparent"><i class="fas fa-search"></i></span>
                        <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Buscar...">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered" id="usersTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Area</th>
                            <th>FechaReparacion</th>
                            <th>DescripcionProblema</th>
                            <th>TrabajoRealizado</th>
                            <th>Costo</th>
                            <th>ProveedorID</th>
                            <th>Responsable</th>
                            <th>Editar</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Area)</td>
                                <td>@Html.DisplayFor(modelItem => item.FechaReparacion)</td>
                                <td>@Html.DisplayFor(modelItem => item.DescripcionProblema)</td>
                                <td>@Html.DisplayFor(modelItem => item.TrabajoRealizado)</td>
                                <td>@Html.DisplayFor(modelItem => item.Costo)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProveedorID)</td>
                                <td>@Html.DisplayFor(modelItem => item.Responsable)</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.EquipoID" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#usersTable').DataTable({
                pageLength: 3,
                lengthChange: false,
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json'
                },
                dom: '<"row"<"col-sm-12 col-md-8 mb-2"><"col-sm-6 text-center"l>>' +
                    'rt' +
                    '<"row"<"col-sm-12 d-flex justify-content-center"p>>',
            });

            $('#searchInput').keyup(function () {
                $('#usersTable').DataTable().search($(this).val()).draw();
            });
        });
    </script>
}




