@model IEnumerable<INTELISIS.APPCORE.EL.CatalogoProveedores>

@{
    ViewData["Title"] = "Proveedores";
}


<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4"><i class="fas fa-users me-2"></i>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Nuevo Proveedor
        </a>
    </div>

    

    <div class="card mb-4">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-table me-2"></i>Listado de proveedores</h5>
                <div>
                    <div class="input-group">

                        <span class="input-group-text bg-transparent"><i class="fas fa-search"></i></span>
                        <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Buscar...">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered" id="usersTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>RFC</th>
                            <th>Teléfono</th>
                            <th>Correo Electrónico</th>
                            <th>Dirección</th>
                            <th>Ciudad</th>
                            <th>Estado</th>
                            <th>Código Postal</th>
                            <th>Fecha de registro</th>
                            <th>Estatus</th>
                            <th>Editar</th>
                            <th>Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.NombreProveedor)</td>
                                <td>@Html.DisplayFor(modelItem => item.TipoProveedor)</td>
                                <td>@Html.DisplayFor(modelItem => item.RFC)</td>
                                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                                <td>@Html.DisplayFor(modelItem => item.CorreoElectronico)</td>
                                <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                                <td>@Html.DisplayFor(modelItem => item.Ciudad)</td>
                                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                                <td>@Html.DisplayFor(modelItem => item.CodigoPostal)</td>
                                <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                                <td>@Html.DisplayFor(modelItem => item.Estatus)</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.ProveedorID" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                                <td class="text-end">
                                    <a asp-action="Delete" asp-route-id="@item.ProveedorID" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#usersTable').DataTable({
                pageLength: 3,
                lengthChange: false,
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json'
                },
                dom: '<"row"<"col-sm-12 col-md-8 mb-2"><"col-sm-6 text-center"l>>' +
                    'rt' +
                    '<"row"<"col-sm-12 d-flex justify-content-center"p>>',
            });

            $('#searchInput').keyup(function () {
                $('#usersTable').DataTable().search($(this).val()).draw();
            });
        });
    </script>
}



